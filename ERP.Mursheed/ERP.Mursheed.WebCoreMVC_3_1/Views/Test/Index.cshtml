
<h1>test index</h1>
<input type="button" id="testBtn" value="test" />
@section scripts{
    <script asp-append-version="true">
        $(document).ready(function () {
            $("#testBtn").on("click", function () {
                $.ajax({
                    url: "/Test/Index/1",
                    method: "POST",
                    success: function () {
                        alert("ok");
                    }
                }).fail(function () {
                    alert("fail");
                });
            })
        })
    </script>
}